{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "kyros-gui",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
	  "window": {
		  "all": false,
		  "close": true,
		  "hide": true,
		  "show": true,
		  "maximize": true,
		  "minimize": true,
		  "unmaximize": true,
		  "unminimize": true,
		  "startDragging": true
	  },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.kyros.dev",
	  "resources": [
		"bins/*"
	  ],
      "icon": [
		"icons/icon.svg"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "kyros-gui",
        "width": 800,
        "height": 600,
		"decorations": false
      }
    ]
  }
}
